/***************************************************************************************************** 
// FORM for Personal Information about a person
/*****************************************************************************************************

turbo-frame id="main_frame"
  	
	form action="/room/#{(@object.nil? ? "new" : @object.id)}" data-controller="modal" method="POST"
	
		.container.full-screen-form.screen-box style="max-width:800px"
			
			/----------------------------------------------------------------------------------------------------------------
			// FORM HEADER
			//----------------------------------------------------------------------------------------------------------------
			.row.u-text-center
				h3 = (@object.nil? ? "NEW ROOM" : "ROOM: #{@object.room}")
				
			/----------------------------------------------------------------------------------------------------------------
			//DOCUMENT FRAME
			//----------------------------------------------------------------------------------------------------------------
			.row
		
				.columns.four
					label for="house" house
					select.u-full-width name="house"
						- Room.houses.each do |house|
							option selected=(@object&.house==house[0]) value=house[0] = house[0].humanize
			
				.columns.two
					label for="floor" floor
					&text.u-full-width name="floor" value=@object&.floor

				.columns.six
					label for="name" room name
					&text.u-full-width name="room" value=@object&.room

				.columns.six
					label for="name" person
					select.u-full-width name="person"
						option selected=(@object&.person_id.blank?) value="" = "empty room"
						- Person.all.order(family_name: :asc).each do |person|
							option selected=(@object&.person_id==person.id) value=person.id = "#{person.family_name}, #{person.first_name}" 

				.columns.six
					label for="phone" phone
					&text.u-full-width name="phone" value=@object&.phone
			
			.row
				.columns.four
					label for="bed" bed
					select.u-full-width name="bed"
						- Room.beds.each do |bed|
							option selected=(@object&.bed==bed[0]) value=bed[0] = bed[0].humanize

				.columns.four
					label for="matress" matress
					&text.u-full-width name="matress" value=@object&.matress

				.columns.four
					label for="bathroom" bathroom
					select.u-full-width name="bathroom"
						- Room.bathrooms.each do |bath|
							option selected=(@object&.bathroom==bath[0]) value=bath[0] = bath[0].humanize


			

			/----------------------------------------------------------------------------------------------------------------
			// FORM BUTTONS
			//----------------------------------------------------------------------------------------------------------------
			.row.center-align
					- if (!@object.nil?) 
						button data-action="click->modal#open_modal" delete  
					button.button-primary type="submit" name="commit" value="save" save  
					a.button.button-secondary formnovalidate="true" href="/rooms" cancel
					

			.modal data-modal-target="modal" 
				.modal-content
					.row.modal-row
						h4.u-text-center
							i.fa-solid.fa-triangle-exclamation
							|&nbspConfirm Delete
					.row.u-text-center style="margin-bottom:2rem; font-size:1rem"
						p.modal-text  = "Are you sure you want to delete this room?"
						p.modal-text = "This action cannot be undone!"
					.row.center-align
						button.button-danger formnovalidate="true" type="submit" name="commit" value="delete" delete 
						button.button-secondary data-action="click->modal#close_modal" cancel