turbo-frame id="main_frame" 
  form action="/people/edit_field" method="POST" data-report-target="form" data-controller="setfield"
		
		.container.screen-box style="max-width: 600px"
			.row.u-text-center
				.columns.twelve
					h4 = "Edit Field for People Set"
			.row.alert.margin-top style="text-align: center;"
					i.class.fa-solid.fa-circle-info  
					|&nbspInstrucciones
					p style="font-size: .9em"
					|Se actualizar√° el valor del campo en <b>todas</b> las personas seleccionadas.
			- puts "Editable Attributes"
			- editable_attributes = TableSettings.get_editable_attributes
			
			.row
				label field
				select.u-full-width name="att_name" data-setfield-target="att_name" data-action="change->setfield#update"
					- editable_attributes.each do |att|
						option value=att.name = att.name
			.row			 

			.row
				.columns.eight.offset-by-two
					label field
					select.u-full-width name="att_name" data-setfield-target="att_name" data-action="change->setfield#update"
						- Person.get_editable_attributes.each do |att|
							option value=att[:name] = att[:name]
						- CrsRecord.get_editable_attributes.each do |att|
							option value=att[:name] = att[:name]

				//.columns.eight.offset-by-two
				//	input.u-full-width type="text" name="att_value"
				
				.columns.eight.offset-by-two
					label value
					input.u-full-width type="text" name="group" value="" style="display:none"
					input.u-full-width type="text" name="year" value="" style="display:none"
					

					select.u-full-width name="ctr" style="display:none" 
						- Person.ctrs.each do |st| 
							option selected=(@person&.ctr==st[0]) value=st[0] = st[0].humanize(capitalize: false) 
					
					select.u-full-width name="status" style="display:none" 
						- Person.statuses.each do |st| 
							option selected=(@person&.status==st[0]) value=st[0] = st[0]

					select.u-full-width name="n/agd" style="display:none" 
						- Person.n_agds.each do |st| 
							option selected=(@person&.n_agd==st[0]) value=st[0] = st[0]
					
					select.u-full-width name="phase" style="display:none" 
						- CrsRecord.phases.each do |st| 
							option selected=(@crs&.phase==st[0]) value=st[0] = st[0]
				/----------------------------------------------------------------------------------------------------------------
				//BUTTONS
				//----------------------------------------------------------------------------------------------------------------
				
			.row
				.columns.eight.offset-by-two
					button#save_btn.button-success.u-full-width type="submit" name="commit" value="save" save
			
			.row	
				.columns.eight.offset-by-two
					a.button.button-secondary.u-full-width formnovalidate="true" data-report-target="cancel_btn" href="/people" cancel 