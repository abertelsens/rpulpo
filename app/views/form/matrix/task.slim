/***************************************************************************************************** 
// FORM for Personal Information about a person
/*****************************************************************************************************

turbo-frame id="main_frame"
  	
	form action="/matrix/task/#{(@object.nil? ? "new" : @object.id)}" method="POST" data-controller="modal"
	
		.container.screen-box
			/----------------------------------------------------------------------------------------------------------------
			// FORM HEADER
			//----------------------------------------------------------------------------------------------------------------
			.row.u-text-center
				h3 = (@object.nil? ? "NEW TASK" : "TASK: #{@object.name}")
				
			/----------------------------------------------------------------------------------------------------------------
			/----------------------------------------------------------------------------------------------------------------
			//DOCUMENT FRAME
			//----------------------------------------------------------------------------------------------------------------
			.row
		
				.columns.two.offset-by-five
					label.u-text-center for="name" name
					&text.u-text-center.u-full-width id="name" name="name" required="true" value=@object&.name
			
			.row
				.columns.twelve.flex-center
					table 
						tr
							th = "horario"
							th.u-text-center = "nÃºmero" 
							th.u-text-center = "desde" 
							th.u-text-center = "hasta" 
							th = "notas" 
						- Schedule.all.each.with_index do |schedule, index|
							- task_schedule = schedule.get_task_schedule(@object)
							tr
								td.u-text-left [style="min-width: 400px; margin-bottom: 0.2rem; margin-top: 0.2rem"
									class="long-field"] 
									b = "#{schedule.name} - #{schedule.description}" 
								
								td.u-text-center
									input[type="number"
									style="margin-bottom: 0.2rem; margin-top: 0.2rem"
									class="short-field u-text-center"
									id="number" 
									name="number[#{schedule.id}]" 
									required="true" 
									min="0"
									value=(task_schedule.nil? ? 0 : task_schedule.number)]
				
								td 
									input[type="text"
									style="margin-bottom: 0.2rem; margin-top: 0.2rem"
									class="medium-field u-text-center" 
									id="s_time" 
									name="s_time[#{schedule.id}]" 
									value=(task_schedule.nil? ? "" : task_schedule&.s_time&.strftime("%H:%M"))]
								td
									input[type="text"
									style="margin-bottom: 0.2rem; margin-top: 0.2rem"
									class="medium-field u-text-center" 
									name="e_time[#{schedule.id}]" 
									value=(task_schedule.nil? ? "" : task_schedule&.e_time&.strftime("%H:%M"))]
								td
									input[type="text"
									style="margin-bottom: 0.2rem; margin-top: 0.2rem"
									class="xlong-field" 
									name="notes[#{schedule.id}]" 
									value=(task_schedule.nil? ? "" : task_schedule&.notes)]

			

			/----------------------------------------------------------------------------------------------------------------
			// FORM BUTTONS
			//----------------------------------------------------------------------------------------------------------------
			.row.center-align
					- if (!@object.nil?) 
						button.button-secondary data-action="click->modal#open_modal" delete 
					button.button-primary type="submit" name="commit" value="save" save  
					a.button.button-secondary formnovalidate="true" href="/matrix" cancel
					

			.modal data-modal-target="modal" 
				.modal-content
					.row.modal-row
						h4.u-text-center
							i.fa-solid.fa-triangle-exclamation
							|&nbspConfirm Delete
					.row.u-text-center style="margin-bottom:2rem; font-size:1rem"
						p.modal-text  = "Are you sure you want to delete this task?"
						p.modal-text = "This action cannot be undone!"
					.row.center-align
						button.button-danger formnovalidate="true" type="submit" name="commit" value="delete" delete 
						button.button-secondary data-action="click->modal#close_modal" cancel