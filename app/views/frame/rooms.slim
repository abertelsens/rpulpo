                  //  .columns.eight.row-field  = "total"
                  //   .columns.two.row-field style="font-size: .7em; text-align:center" = data[:empty]
                  //  .columns.two.row-field style="font-size: .7em; text-align:center" = data[:empty]+data[:occupied]  
                    


              .columns.eight.u-full-width
                div.container.table-container   
                  .row.row-head
                    .two.columns.row-label = "casa"
                    .one.columns.row-label = "planta"
                    .two.columns.row-label = "nombre"
                    .four.columns.row-label = "persona"
                    .two.columns.row-label = "ba√±o"
                    .one.columns.row-label = "cama"
                    
                turbo-frame id="rooms_table" src="/rooms/table"