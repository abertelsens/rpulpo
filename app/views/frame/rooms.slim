turbo-frame id="main_frame" 
  
  .container.container-frame style="margin-left:40px; margin-right:40px;" data-controller="search"
    form.form-inline method="GET" action="/rooms/search" data-controller="search" data-turbo-frame="rooms_table" aria-label="Search" name="q" data-action="input->searchfield#submit"  
      .row

            
        .columns.twelve
          .columns.twelve 
            .row.header-frame
              .columns.twelve.u-text-center
                h3 = "ROOMS"
            
            .row 
              .columns.five.offset-by-four.u-text-center
                input#search_string.u-full-width autofocus="autofocus" type="search" autocomplete="off" placeholder="search" aria-label="Search" name="q" data-action="input->search#submit"
                input#sort_order type="hidden" name="sort_order" data-search-target="sort_order"
              
              .columns.two.u-full-width
                a.button.button-primary.u-full-width href="/room/new" data-turbo-frame="editor_frame"
                    i.fa-solid.fa-plus style="font-size:small"
                    |&nbspadd room

            .row
              .columns.three style="min-width:100px; padding-right:30px"
                .container.table-container
                  .row.row-head
                    .columns.eight.row-label = "casa"
                    .columns.two.row-label style="text-align:center" = "libres"
                    .columns.two.row-label style="text-align:center" = "total"
                  .row.scrollable
                    - Room.get_empty_rooms_by_house.each do |house|
                      .columns.eight.row-field = house[:house] 
                      .columns.two.row-field style="text-align:center" = house[:empty]
                      .columns.two.row-field style="text-align:center" = house[:empty]+house[:occupied]
                  //.row.scrollable.row-head
